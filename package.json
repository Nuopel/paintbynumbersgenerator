{
  "name": "paint-by-numbers-generator",
  "version": "1.0.0",
  "description": "Paint by numbers generator",
  "bin": "./src-cli/main.js",
  "scripts": {
    "lite": "lite-server --port 10001",
    "start": "npm run lite",
    "build": "tsc -p src/tsconfig.json && tsc -p src-cli/tsconfig.json",
    "build:cli": "tsc -p src-cli/tsconfig.json",
    "explore": "tsc -p src-cli/tsconfig.json && node src-cli/explore.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "author": "drake7707",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "jest-canvas-mock": "^2.5.2",
    "lite-server": "^1.3.1",
    "ts-jest": "^29.4.5",
    "pkg": "^5.8.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/jquery": "^3.3.31",
    "@types/materialize-css": "^1.0.6",
    "@types/minimist": "^1.2.0",
    "canvas": "^2.11.2",
    "minimist": "^1.2.3",
    "svg2img": "^0.6.1"
  },
  "pkg": {
    "assets": [
      "src-cli/settings.json"
    ],
    "scripts": [
      "src-cli/**/*.js",
      "node_modules/**/*"
    ],
    "targets": [
      "node16-linux-x64"
    ]
  }
}
